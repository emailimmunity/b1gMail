# ============================================================================
# b1gMail - Umgebungsvariablen (Docker/Kubernetes)
# ============================================================================
# 
# Kopieren nach: .env
# Dann: docker-compose up -d
# 
# WICHTIG:
# - .env in .gitignore eintragen!
# - Enthält sensible Passwörter!
# ============================================================================

# ============================================================================
# CYRUS IMAP/POP3/JMAP
# ============================================================================
CYRUS_ENABLED=true
CYRUS_SERVER=imap.domain.com
CYRUS_IMAP_PORT=993
CYRUS_POP3_PORT=995
CYRUS_ADMIN_USER=cyrus
CYRUS_ADMIN_PASS=CHANGEME_CYRUS_PASSWORD
CYRUS_JMAP_URL=https://imap.domain.com:8080/jmap/

# ============================================================================
# POSTFIX (SMTP)
# ============================================================================
POSTFIX_SERVER=smtp.domain.com
SMTP_PORT=25
SUBMISSION_PORT=587
SMTPS_PORT=465

# ============================================================================
# SABREDAV (CalDAV/CardDAV)
# ============================================================================
SABREDAV_ENABLED=true
SABREDAV_BASE_URL=https://mail.domain.com
CALDAV_ENABLED=true
CARDDAV_ENABLED=true
SABREDAV_WEBDAV_ENABLED=false

# ============================================================================
# GROMMUNIO (MAPI/EWS/EAS/Outlook)
# ============================================================================
GROMMUNIO_ENABLED=true
GROMMUNIO_SERVER=exchange.domain.com
GROMMUNIO_ADMIN_API=http://grommunio:8080/api/v1
GROMMUNIO_ADMIN_USER=admin
GROMMUNIO_ADMIN_PASS=CHANGEME_GROMMUNIO_PASSWORD
GROMMUNIO_MAPI_URL=https://exchange.domain.com/mapi
GROMMUNIO_EWS_URL=https://exchange.domain.com/EWS/Exchange.asmx
GROMMUNIO_EAS_URL=https://exchange.domain.com/Microsoft-Server-ActiveSync
GROMMUNIO_AUTODISCOVER_URL=https://exchange.domain.com/Autodiscover/Autodiscover.xml

# ============================================================================
# SFTPGO (SFTP/FTPS/S3/WebDAV/Cloud Storage)
# ============================================================================
SFTPGO_ENABLED=true
SFTPGO_SERVER=files.domain.com
SFTPGO_SFTP_PORT=2022
SFTPGO_FTPS_PORT=990
SFTPGO_ADMIN_API=http://sftpgo:8080/api/v2
SFTPGO_ADMIN_USER=admin
SFTPGO_ADMIN_PASS=CHANGEME_SFTPGO_PASSWORD
SFTPGO_S3_ENABLED=true
SFTPGO_S3_ENDPOINT=https://files.domain.com:8333
SFTPGO_S3_REGION=us-east-1
SFTPGO_WEBDAV_ENABLED=true
SFTPGO_WEBDAV_ENDPOINT=https://files.domain.com/dav

# ============================================================================
# b1gMail Core (Optional)
# ============================================================================
B1GMAIL_DB_HOST=mysql
B1GMAIL_DB_NAME=b1gmail
B1GMAIL_DB_USER=b1gmail
B1GMAIL_DB_PASS=CHANGEME_DB_PASSWORD

# ============================================================================
# Debug (Optional)
# ============================================================================
DEBUG_CONFIG=false
